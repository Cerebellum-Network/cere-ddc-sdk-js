{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "@cere-ddc-sdk/content-addressable-storage": ["packages/content-addressable-storage/src"],
            "@cere-ddc-sdk/content-addressable-storage/*": ["packages/content-addressable-storage/src/*"],
            "@cere-ddc-sdk/core": ["packages/core/src"],
            "@cere-ddc-sdk/core/*": ["packages/core/src/*"],
            "@cere-ddc-sdk/ddc-client": ["packages/ddc-client/src"],
            "@cere-ddc-sdk/ddc-client/*": ["packages/ddc-client/src/*"],
            "@cere-ddc-sdk/file-storage": ["packages/file-storage/src"],
            "@cere-ddc-sdk/file-storage/*": ["packages/file-storage/src/*"],
            "@cere-ddc-sdk/key-value-storage": ["packages/key-value-storage/src"],
            "@cere-ddc-sdk/key-value-storage/*": ["packages/key-value-storage/src/*"],
            "@cere-ddc-sdk/proto": ["packages/proto/src"],
            "@cere-ddc-sdk/proto/*": ["packages/proto/src/*"],
            "@cere-ddc-sdk/smart-contract": ["packages/smart-contract/src"],
            "@cere-ddc-sdk/smart-contract/*": ["packages/smart-contract/src/*"]
        }
    },
    "include": ["packages/", "tests/"],
    "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist", "package"]
}
