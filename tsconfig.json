{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@cere-ddc-sdk/*": ["./packages/*/src/"]
    }
  },
  "include": ["packages/"],
  "exclude": [
    "**/*.test.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist"
  ]
}