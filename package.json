{
  "name": "cere-ddc-sdk",
  "description": "Cere DDC SDK for JavaScript",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cerebellum-Network/cere-ddc-sdk-js.git"
  },
  "author": "Cere Network <contact@cere.io (https://www.cere.io/)",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint --quiet '**/*.{ts,js}'",
    "lint:fix": "npm run lint -- --fix",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "test:clean": "lerna run test:clean",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "package": "lerna run package",
    "release": "lerna version --exact --force-publish --preid rc",
    "release:no-push": "npm run release --no-push --no-git-tag-version",
    "release:publish": "lerna publish from-package",
    "playground": "npm start --workspace=@cere-ddc-sdk/playground"
  },
  "dependencies": {
    "@types/node": "^18.17.1",
    "clean-publish": "^4.2.0",
    "eslint": "^8.54.0",
    "lerna": "^7.4.2",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.5.5",
    "wait-port": "^1.1.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "playground",
      "tests"
    ],
    "nohoist": [
      "playground/**"
    ]
  }
}
