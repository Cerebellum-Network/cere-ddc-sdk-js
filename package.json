{
    "name": "cere-ddc-sdk",
    "description": "Cere DDC SDK for JavaScript",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Cerebellum-Network/cere-ddc-sdk-js.git"
    },
    "author": "",
    "license": "Apache-2.0",
    "scripts": {
        "format": "prettier --write \"packages/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --passWithNoTests --silent --detectOpenHandles",
        "test:clean": "rimraf ./tests/data/*",
        "clean": "lerna run clean",
        "build": "lerna run build",
        "package": "lerna run package",
        "release": "lerna version --exact --force-publish --preid rc",
        "release:no-push": "npm run release --no-push --no-git-tag-version",
        "release:publish": "lerna publish from-package",
        "playground": "npm start --workspace=@cere-ddc-sdk/playground"
    },
    "dependencies": {
        "detect-port": "^1.5.1",
        "lerna": "^7.2.0",
        "microbundle": "^0.15.1",
        "ws": "^8.14.2",
        "@types/detect-port": "^1.3.2",
        "@types/jest": "^27.4.0",
        "@types/node": "^18.17.1",
        "clean-publish": "^4.2.0",
        "eslint-plugin-jest": "^27.4.0",
        "internal-ip": "6.2.0",
        "jest": "^29.7.0",
        "prettier": "^2.5.1",
        "rimraf": "^5.0.5",
        "testcontainers": "^8.10.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.5.5",
        "npm-run-all": "^4.1.5",
        "wait-port": "^1.1.0"
    },
    "workspaces": [
        "packages/*",
        "playground"
    ],
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": false
    }
}
