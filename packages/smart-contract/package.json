{
    "name": "@cere-ddc-sdk/smart-contract",
    "description": "Smart contract client",
    "version": "1.7.6-rc.2",
    "type": "module",
    "repository": {
        "type": "git",
        "directory": "packages/smart-contract",
        "url": "git+https://github.com/Cerebellum-Network/cere-ddc-sdk-js.git"
    },
    "main": "./dist/index.cjs",
    "types": "./dist/types",
    "exports": {
        ".": {
            "browser": "./dist/browser.js",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./browser": {
            "require": "./dist/browser.cjs",
            "import": "./dist/browser.js",
            "default": "./dist/browser.js"
        }
    },
    "typesVersions": {
        "*": {
            "browser": [
                "./dist/types/browser.d.ts"
            ]
        }
    },
    "author": "Cere Network <contact@cere.io (https://www.cere.io/)",
    "license": "Apache-2.0",
    "scripts": {
        "build:cjs": "TARGET=build:cjs NODE_ENV=production webpack",
        "build:mjs": "TARGET=build:mjs NODE_ENV=production webpack",
        "build:browser": "BROWSERSLIST_ENV=browser npm run build:cjs && BROWSERSLIST_ENV=browser npm run build:mjs",
        "build:node": "BROWSERSLIST_ENV=node npm run build:cjs && BROWSERSLIST_ENV=node npm run build:mjs",
        "build": "npm run types && npm run build:browser && npm run build:node",
        "push": "node scripts/publish.js",
        "types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
        "package": "npm run clean && npm run build && clean-publish",
        "clean": "rimraf dist package"
    },
    "devDependencies": {
        "@polkadot/extension-dapp": "^0.46.5",
        "@polkadot/extension-inject": "^0.46.5",
        "@types/lodash": "^4.14.182",
        "@types/node": "^16.0.0",
        "clean-publish": "^4.0.1",
        "crypto-browserify": "^3.12.0",
        "lodash": "^4.17.21",
        "rimraf": "^3.0.2",
        "stream-browserify": "^3.0.0",
        "typescript": "4.5.4"
    },
    "dependencies": {
        "@polkadot/api": "9.4.1",
        "@polkadot/api-contract": "9.4.1",
        "@polkadot/keyring": "^10.1.8",
        "@polkadot/util-crypto": "^10.1.8",
        "@polkadot/types": "9.4.1"
    }
}
