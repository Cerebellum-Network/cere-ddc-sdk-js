{
  "name": "@cere-ddc-sdk/smart-contract",
  "description": "Smart contract client",
  "version": "1.7.5-beta.1",
  "type": "module",
  "repository": {
    "type": "git",
    "directory": "packages/smart-contract",
    "url": "git+https://github.com/Cerebellum-Network/cere-ddc-sdk-js.git"
  },
  "exports": {
    ".": {
      "browser": "./browser.js",
      "require": "./index.cjs",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./browser": {
      "require": "./browser.cjs",
      "import": "./browser.js",
      "default": "./browser.js"
    }
  },
  "typesVersions": {
    "*": {
      "browser": [
        "browser"
      ]
    }
  },
  "types": "node.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "build:cjs": "TARGET=build:cjs NODE_ENV=production webpack",
    "build:mjs": "TARGET=build:mjs NODE_ENV=production webpack",
    "build:browser": "BROWSERSLIST_ENV=browser npm run build:cjs && BROWSERSLIST_ENV=browser npm run build:mjs",
    "build:node": "BROWSERSLIST_ENV=node npm run build:cjs && BROWSERSLIST_ENV=node npm run build:mjs",
    "build": "npm run build:browser && npm run build:node",
    "push": "node scripts/publish.js",
    "types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "package": "rimraf build && clean-publish --temp-dir build && npm run types && npm run build"
  },
  "devDependencies": {
    "@polkadot/extension-dapp": "^0.44.1",
    "@polkadot/extension-inject": "^0.44.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.0.0",
    "clean-publish": "^4.0.1",
    "crypto-browserify": "^3.12.0",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@polkadot/api": "8.2.1",
    "@polkadot/api-contract": "8.2.1",
    "@polkadot/keyring": "~9.7.2",
    "@polkadot/util-crypto": "~9.7.2",
    "@polkadot/wasm-crypto": "~6.4.1",
    "@polkadot/types": "~9.7.1"
  }
}
